{
    "version": "kubepattern.it/v1",
    "kind": "Pattern",
    "metadata": {
        "name": "table-not-referenced",
        "displayName": "Table Not Referenced",
        "patternType": "CUSTOM",
        "severity": "WARNING",
        "category": "architecture",
        "docUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/test/doc/resource-not-referenced.md",
        "gitUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/main/doc/table-not-referenced-pattern.json",
        "description": "Identifies Tables in Krateo that are not referenced by any Panel, Row, Column, or Page. Unreferenced Tables may indicate unused or orphaned resources that could be cleaned up to optimize resource management and maintain a tidy environment."
    },
    "spec": {
        "message": "Table {{krateo-table.name}} in namespace {{krateo-table.namespace}} is not referenced by any widget (Panel, Row, Column, Page).",
        "topology": "SINGLE",
        "resources": [
            {
                "resource": "Table",
                "id": "krateo-table",
                "leader": true,
                "filters": {
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "krateo-system",
                                "kube-system",
                                "gmp-system",
                                "cnrm-system",
                                "kargo",
                                "cert-manager",
                                "krateo-podspanelobject-ns",
                                "gke-managed-cim"
                            ]
                        }
                    ]
                }
            },
            {
                "resource": "Panel",
                "id": "krateo-panel-containing-table"
            },
            {
                "resource": "Row",
                "id": "krateo-row-containing-table"
            },
            {
                "resource": "Column",
                "id": "krateo-column-containing-table"
            },
            {
                "resource": "Page",
                "id": "krateo-page-containing-table"
            }
        ],
        "actors": [
            "krateo-table"
        ],
        "relationships": [
            {
                "id": "table-to-panel-relationship",
                "type": "REFERENCES_KRATEO",
                "description": "Links Table '{{krateo-table.name}}' with Panel containing the Table '{{krateo-panel-containing-table.name}}'.",
                "weight": 1,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "krateo-table",
                    "krateo-panel-containing-table"
                ]
            },
            {
                "id": "table-to-row-relationship",
                "type": "REFERENCES_KRATEO",
                "description": "Links Table '{{krateo-table.name}}' with Row containing the Table '{{krateo-row-containing-table.name}}'.",
                "weight": 1,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "krateo-table",
                    "krateo-row-containing-table"
                ]
            },
            {
                "id": "table-to-column-relationship",
                "type": "REFERENCES_KRATEO",
                "description": "Links Table '{{krateo-table.name}}' with Column containing the Table '{{krateo-column-containing-table.name}}'.",
                "weight": 1,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "krateo-table",
                    "krateo-column-containing-table"
                ]
            },
            {
                "id": "table-to-page-relationship",
                "type": "REFERENCES_KRATEO",
                "description": "Links Table '{{krateo-table.name}}' with Page containing the Table '{{krateo-page-containing-table.name}}'.",
                "weight": 1,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "krateo-table",
                    "krateo-page-containing-table"
                ]
            }
        ],
        "minRelationshipPoints": 1
    }
}



