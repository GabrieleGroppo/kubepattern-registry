{
    "version": "kubepattern.sigemi.it/v1",
    "kind": "Pattern",
    "metadata": {
        "name": "sidecar-test",
        "displayName": "Sidecar Test",
        "patternType": "Structural",
        "severity": "Info",
        "category": "logging",
        "docUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/main/definitions",
        "gitUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/main/doc",
        "patternURI": "patternURI"
    },
    "spec": {
        "description": "Identifica i pod che potrebbero implementare un pattern sidecar.",
        "message": "Il pod {{main-app.name}} nel namespace {{main-app.namespace}} potrebbe implementare un pattern sidecar con {{sidecar.name}} nel namespace {{sidecar.namespace}}. Considera di spostare il sidecar nello stesso pod del main app per migliorare la gestione e le prestazioni.",
        "resources": [
            {
                "resource": "Pod",
                "id": "main-app",
                "filters": {
                    "matchAll": [],
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "kube-system",
                                "kube-public",
                                "kube-node-lease"
                            ]
                        }
                    ],
                    "matchAny": []
                }
            },
            {
                "resource": "Pod",
                "id": "sidecar",
                "filters": {
                    "matchAll": [],
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "kube-system",
                                "kube-public",
                                "kube-node-lease"
                            ]
                        }
                    ],
                    "matchAny": []
                }
            }
        ],
        "relationships": [
            {
                "id": "main-app-sidecar-network-proximity",
                "type": "MOUNTS",
                "description": "Resources should be network-accessible to each other",
                "weight": 0.5,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "main-app",
                    "sidecar"
                ]
            }
        ]
    }
}