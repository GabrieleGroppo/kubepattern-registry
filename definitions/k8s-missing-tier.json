{
    "version": "kubepattern.it/v1",
    "kind": "Pattern",
    "metadata": {
        "name": "missing-tier-label",
        "displayName": "Missing Tier Label",
        "patternType": "CUSTOM",
        "severity": "INFO",
        "category": "documentation",
        "gitUrl": "https://github.com/kubepattern/registry/tree/main/doc/k8s-missing-tier.json",
        "docUrl": "https://github.com/kubepattern/registry/tree/test/doc/k8s-missing-tier.md",
        "description": "Identifies pods that are missing a tier label (e.g., 'frontend', 'backend', 'database'). Properly labeling pods with their respective tiers is essential for organizing, managing, and applying policies within a Kubernetes cluster. Tier labels help in defining patterns, network policies, resource allocation, and monitoring strategies based on the role of the application component."
    },
    "spec": {
        "message": "Pod '{{app.name}}' in namespace '{{app.namespace}}' is missing a tier label.",
        "topology": "SINGLE",
        "resources": [
            {
                "resource": "Pod",
                "id": "app",
                "leader": true,
                "filters": {
                    "matchAll": [
                        {
                            "key": ".metadata.labels.app",
                            "operator": "EXISTS",
                            "values": []
                        }
                    ],
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "kube-system",
                                "kube-public",
                                "kube-node-lease",
                                "krateo-system"
                            ]
                        }
                    ]
                }
            }
        ],
        "actors": [
            "app"
        ]
    }
}