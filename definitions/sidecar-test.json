{
    "version": "kubepattern.sigemi.it/v1",
    "kind": "Pattern",
    "metadata": {
        "name": "sidecar-test",
        "displayName": "Sidecar Test",
        "patternType": "Structural",
        "severity": "Info",
        "category": "logging",
        "docUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/main/definitions",
        "gitUrl": "https://github.com/GabrieleGroppo/kubepattern-registry/tree/main/doc",
        "patternURI": "patternURI"
    },
    "spec": {
        "description": "Identifies pods that might implement a sidecar pattern.",
        "message": "Pod {{main-app.name}} in namespace {{main-app.namespace}} might implement a sidecar pattern with {{sidecar.name}} in namespace {{sidecar.namespace}}. Consider moving the sidecar into the same pod as the main app to improve management and performance.",
        "topology": "LEADER_FOLLOWER",
        "leader": "main-app",
        "resources": [
            {
                "resource": "Pod",
                "id": "main-app",
                "filters": {
                    "matchAll": [],
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "kube-system",
                                "kube-public",
                                "kube-node-lease"
                            ]
                        }
                    ],
                    "matchAny": []
                }
            },
            {
                "resource": "Pod",
                "id": "sidecar",
                "filters": {
                    "matchAll": [],
                    "matchNone": [
                        {
                            "key": ".metadata.namespace",
                            "operator": "EQUALS",
                            "values": [
                                "kube-system",
                                "kube-public",
                                "kube-node-lease"
                            ]
                        }
                    ],
                    "matchAny": []
                }
            }
        ],
        "relationships": [
            {
                "id": "main-app-sidecar-shared-volume",
                "type": "MOUNTS",
                "description": "Il pod main-app e il pod sidecar montano lo stesso volume.",
                "weight": 0.5,
                "required": true,
                "shared": false,
                "resourceIds": [
                    "main-app",
                    "sidecar"
                ]
            }
        ]
    }
}
